<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_expense_tracker" model="ir.actions.act_window">
    <field name="name">All Expenses</field>
    <field name="res_model">expense.tracker</field>
    <field name="view_mode">tree,form</field>
</record>
    <!-- Tree View -->
    <record id="view_expense_tree" model="ir.ui.view">
        <field name="name">expense.tracker.tree</field>
        <field name="model">expense.tracker</field>
        <field name="arch" type="xml">
            <tree decoration-success="state=='approved'"
                  decoration-warning="state=='submitted'"
                  decoration-danger="state=='rejected'">
                <field name="name"/>
                <field name="title"/>
                <field name="amount" sum="Total"/>
                <field name="category_id"/>
                <field name="date"/>
                <field name="state" widget="badge"/>
                <field name="user_id"/>
                <field name="payment_method"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_expense_form" model="ir.ui.view">
        <field name="name">expense.tracker.form</field>
        <field name="model">expense.tracker</field>
        <field name="arch" type="xml">
            <form>
                <header>

                     <button name="action_expense_invoice_wizard"
                        string="Create Invoice"
                        type="object"
                        class="btn-primary"
                        context="{'default_expense_id': active_id}"
                        attrs="{'invisible': [('state', 'in', ['paid', 'cancel'])]}"/>
                    <button name="action_submit" string="Submit" type="object"
                            class="btn-primary" states="draft"/>
                    <button name="action_approve" string="Approve" type="object"
                            class="btn-primary" states="submitted"/>
                    <button name="action_reject" string="Reject" type="object"
                            class="btn-secondary" states="submitted"/>
                    <button name="action_mark_paid" string="Mark Paid" type="object"
                            class="btn-primary" states="approved"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object"
                            class="btn-secondary" states="submitted,rejected"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,rejected,paid"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="title"/>
                            <field name="category_id"/>
                            <field name="amount"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="amount_company_currency" readonly="1"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="user_id"/>
                            <field name="state" readonly="1"/>
                            <field name="payment_method"/>
                            <field name="partner_id"/>
                        </group>
                    </group>
                    <group string="Details">
                        <field name="description" placeholder="Add detailed description..."/>
                    </group>
                    <group string="Receipt" attrs="{'invisible': [('receipt', '=', False)]}">
                        <field name="receipt_filename" readonly="1"/>
                        <field name="receipt" filename="receipt_filename" readonly="1"/>
                    </group>
                    <group string="Budget">
                        <field name="budget_id" 
                        domain="[ ('category_id', '=', category_id), ('state', '=', 'active')]" 
                        context="{'default_category_id': category_id}"
                        options="{'no_create': False}"/>
                        <field name="budget_percentage" readonly="1"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_expense_search" model="ir.ui.view">
        <field name="name">expense.tracker.search</field>
        <field name="model">expense.tracker</field>
        <field name="arch" type="xml">
            <search>
                <field name="title"/>
                <field name="category_id"/>
                <field name="user_id"/>
               <filter string="This Month" name="current_month"
                        domain="[('date', '&gt;=', context_today().replace(day=1)),
                 ('date', '&lt;=', context_today())]"/>
                <filter string="Pending Approval" name="pending"
                        domain="[('state', '=', 'submitted')]"/>
                <filter string="My Expenses" name="my_expenses"
                        domain="[('user_id', '=', uid)]"/>
                <group expand="0" string="Group By">
                    <filter string="Category" name="category" context="{'group_by': 'category_id'}"/>
                    <filter string="Month" name="month" context="{'group_by': 'date:month'}"/>
                    <filter string="Status" name="status" context="{'group_by': 'state'}"/>
                    <filter string="User" name="user" context="{'group_by': 'user_id'}"/>
                </group>
            </search>
        </field>
    </record>

   <record id="action_my_expenses" model="ir.actions.act_window">
    <field name="name">My Expenses</field>
    <field name="res_model">expense.tracker</field>
    <field name="view_mode">tree,form</field>
    <field name="domain">[('user_id', '=', uid)]</field>
   </record>

    <record id="action_approval_queue" model="ir.actions.act_window">
    <field name="name">Approval Queue</field>
    <field name="res_model">expense.tracker</field>
    <field name="view_mode">tree,form</field>
    <field name="domain">[('state', '=', 'submitted')]</field>
</record>

    <record id="action_expense_report" model="ir.actions.act_window">
    <field name="name">Expense Analysis</field>
    <field name="res_model">expense.tracker</field>
    <field name="view_mode">tree,form</field>
</record>


</odoo>