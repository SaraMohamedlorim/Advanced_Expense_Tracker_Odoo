<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========== Wizard Form View ========== -->
    <record id="view_expense_import_wizard_form" model="ir.ui.view">
        <field name="name">expense.import.wizard.form</field>
        <field name="model">expense.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Expenses from CSV" version="7.0">
                <sheet>
                    <group>
                        <field name="csv_file" filename="filename"/>
                        <field name="filename" invisible="1"/>
                        <field name="import_type"/>
                    </group>

                    <notebook>
                        <page string="Field Mapping">
                            <group>
                                <field name="title_column"/>
                                <field name="amount_column"/>
                                <field name="category_column"/>
                                <field name="date_column"/>
                                <field name="description_column"/>
                            </group>
                        </page>

                        <page string="Import Options">
                            <group>
                                <field name="date_format"/>
                                <field name="delimiter"/>
                            </group>
                        </page>

                        <page string="Results">
                            <group>
                                <field name="total_records" readonly="1"/>
                                <field name="successful_imports" readonly="1"/>
                                <field name="failed_imports" readonly="1"/>
                            </group>
                            <field name="import_result" nolabel="1" readonly="1" colspan="4" widget="text"/>
                        </page>
                    </notebook>

                    <footer>
                        <button name="action_preview_import" string="Preview" type="object" class="btn-secondary"/>
                        <button name="action_import" string="Import" type="object" class="btn-primary"/>
                        <button name="download_template" string="Download Template" type="object" class="btn-info"/>
                        <button string="Close" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ========== Action to Open the Wizard ========== -->
    <record id="action_expense_import_wizard" model="ir.actions.act_window">
        <field name="name">Import Expenses</field>
        <field name="res_model">expense.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_expense_import_wizard_form"/>
        <field name="target">new</field>
    </record>

     <menuitem id="menu_expense_root"
              name="Expense Tracker"
              sequence="1"/>

    <!-- ========== Menu Item (Optional) ========== -->
  
    <menuitem id="menu_expense_import_wizard"
              name="Import from CSV"
              parent="menu_expense_root"
              action="action_expense_import_wizard"
              sequence="30"/>
</odoo>
