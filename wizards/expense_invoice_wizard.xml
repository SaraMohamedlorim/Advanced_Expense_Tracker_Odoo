<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ===================== Wizard Form View ===================== -->
    <record id="view_expense_invoice_wizard_form" model="ir.ui.view">
        <field name="name">expense.invoice.wizard.form</field>
        <field name="model">expense.invoice.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Vendor Bill" version="7.0">
                <sheet>
                    <group>
                        <field name="expense_id" readonly="1"/>
                        <field name="partner_id"/>
                        <field name="product_id"/>
                        <field name="journal_id"/>
                    </group>

                    <group>
                        <field name="invoice_date"/>
                        <field name="due_date" readonly="1"/>
                        <field name="reference"/>
                    </group>

                    <separator string="Expense Information"/>
                    <group>
                        <field name="amount" readonly="1"/>
                        <field name="currency_id" readonly="1"/>
                        <field name="description" readonly="1"/>
                    </group>

                    <separator string="Payment Options"/>
                    <group>
                        <field name="create_payment"/>
                        <field name="payment_journal_id" attrs="{'invisible': [('create_payment', '=', False)]}"/>
                        <field name="payment_date" attrs="{'invisible': [('create_payment', '=', False)]}"/>
                    </group>

                    <footer>
                        <button name="action_create_invoice" string="Create Vendor Bill" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ===================== Action to Open the Wizard ===================== -->
    <record id="action_expense_invoice_wizard" model="ir.actions.act_window">
        <field name="name">Create Vendor Bill</field>
        <field name="res_model">expense.invoice.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_expense_invoice_wizard_form"/>
        <field name="target">new</field>
    </record>


</odoo>
