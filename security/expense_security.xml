<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="group_expense_manager" model="res.groups">
            <field name="name">Expense / Manager</field>
            <field name="category_id" ref="base.module_category_hr_expense"/>
        </record>

        <record id="group_expense_user" model="res.groups">
            <field name="name">Expense / User</field>
            <field name="category_id" ref="base.module_category_hr_expense"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Record Rules -->
        <record id="expense_tracker_user_rule" model="ir.rule">
            <field name="name">Expense Tracker User Rule</field>
            <field name="model_id" ref="model_expense_tracker"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_expense_user'))]"/>
        </record>

        <record id="expense_tracker_manager_rule" model="ir.rule">
            <field name="name">Expense Tracker Manager Rule</field>
            <field name="model_id" ref="model_expense_tracker"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_expense_manager'))]"/>
        </record>
    </data>
</odoo>